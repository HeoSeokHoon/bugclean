<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

  
  
  <mapper namespace="com.winter.app.customer.CustomerDAO">

  	
  	<select id="getList" resultType="CustomerVO">
  		SELECT * FROM CUSTOMER
  	</select>
  	

  	<select id="getDetail" resultType="CustomerVO" parameterType="CustomerVO">
  		SELECT * FROM CUSTOMER WHERE BUSINESS_NUM = #{business_Num}
  	</select>
  	
	<insert id="createCustomer" parameterType="CustomerVO">
		INSERT INTO CUSTOMER 
		VALUES(CUSTOMER_SEQ.NEXTVAL,#{business_Num},#{business_Name},#{ceo_Name},#{ceo_Phone},#{manager_Name},#{manager_Phone},#{sales_Manager},'법인',SYSDATE,#{address},'계약중')
	</insert>
	
	<update id="updateCustomer" parameterType="CustomerVO">
		UPDATE CUSTOMER SET
		(BUSINEES_NUM,BUSINEES_NAME,CEO_NAME,CEO_PHONE,MANAGER_NAME,MANAGER_PHONE,ADDRESS,SALES_MANAGER)
		=(#{business_Num},#{business_Name},#{ceo_Name},#{ceo_Phone},#{manager_Name},#{manager_Phone},#{address},#{sales_Manager})
		WHERE CUSTOMER_NUM = #{customer_Num}		
	</update>
	
  </mapper>